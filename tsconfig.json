{
  "extends": "@gravity-ui/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build/esm",
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "target": "ES2020",
    "resolveJsonModule": true,
    "importHelpers": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/typings/*.d.ts"],
  "exclude": ["node_modules"]
}
