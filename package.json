{
  "name": "page-constructor-website-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npm run clean:all && next dev",
    "build": "npm run clean:all && next build",
    "dev:export": "EXPORT_MODE=true npm run clean && next dev",
    "build:export": "EXPORT_MODE=true npm run build && npm run sitemap",
    "start": "next start",
    "start:dev": "NODE_ENV=development next start",
    "start:export": "npx serve out",
    "clean": "npx rimraf .next out",
    "clean:all": "npm run clean && npm run clean:public",
    "clean:public": "npx rimraf public",
    "sitemap": "next-sitemap",
    "typecheck": "tsc -p . --noEmit",
    "svgo": "svgo --multipass --pretty",
    "lint": "run-s lint:js lint:styles lint:prettier typecheck",
    "lint:fix": "run-s lint:js:fix lint:styles:fix lint:prettier:fix typecheck",
    "lint:js": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:js:fix": "npm run lint:js -- --quiet --fix",
    "lint:styles": "stylelint **/*.scss",
    "lint:styles:fix": "stylelint **/*.scss --fix",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "lint:prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@bem-react/classname": "^1.6.0",
    "@diplodoc/transform": "^4.56.0",
    "@gravity-ui/i18n": "^1.0.0",
    "@gravity-ui/page-constructor": "^6.7.0",
    "@gravity-ui/uikit": "^7.9.1",
    "csurf": "^1.11.0",
    "fast-json-parse": "^1.0.3",
    "lodash": "^4.17.21",
    "next": "15.3.1",
    "next-global-css": "^1.3.1",
    "node-cache": "^5.1.2",
    "pino": "^7.6.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-final-form": "^6.5.8",
    "react-router-dom": "^6.2.1",
    "split2": "^4.1.0",
    "ua-parser-js": "^1.0.2"
  },
  "devDependencies": {
    "@gravity-ui/eslint-config": "^3.3.0",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/stylelint-config": "^4.0.1",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@next/eslint-plugin-next": "15.3.1",
    "@svgr/webpack": "^6.2.1",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.178",
    "@types/node": "^14.18.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.0",
    "@types/split2": "^3.2.1",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.26.0",
    "eslint-config-next": "15.3.1",
    "express": "^4.17.3",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.3",
    "next-purgecss": "^4.0.0",
    "next-remove-imports": "^1.0.11",
    "next-sitemap": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "postcss-scss": "^4.0.6",
    "prettier": "^3.5.3",
    "sanitize-html": "^2.7.0",
    "sass": "^1.64.1",
    "sass-loader": "^12.6.0",
    "stylelint": "^15.11.0",
    "svgo": "^2.8.0",
    "typescript": "^4.8.4",
    "typograf": "^6.14.0",
    "url-loader": "^4.1.1",
    "webpack-assets-manifest": "^5.1.0",
    "webpack-preprocessor-loader": "^1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.svg": [
      "npm run svgo"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
