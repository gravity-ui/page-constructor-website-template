{
  "name": "page-constructor-website-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npm run clean && next dev",
    "build": "npm run clean && next build",
    "start": "next start",
    "start:dev": "NODE_ENV=development next start",
    "clean": "npx rimraf .next",
    "typecheck": "tsc -p . --noEmit",
    "svgo": "svgo --multipass --pretty",
    "lint": "run-s lint:js lint:styles lint:prettier typecheck",
    "lint:fix": "run-s lint:js:fix lint:styles:fix lint:prettier:fix typecheck",
    "lint:js": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:js:fix": "npm run lint:js -- --quiet --fix",
    "lint:styles": "stylelint **/*.scss",
    "lint:styles:fix": "stylelint **/*.scss --fix",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "lint:prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@bem-react/classname": "^1.6.0",
    "@doc-tools/transform": "^3.9.0",
    "@gravity-ui/i18n": "^1.0.0",
    "@gravity-ui/page-constructor": "^4.9.0",
    "@gravity-ui/uikit": "^5.9.0",
    "csurf": "^1.11.0",
    "fast-json-parse": "^1.0.3",
    "lodash": "^4.17.21",
    "next": "13.2.4",
    "next-global-css": "^1.3.1",
    "node-cache": "^5.1.2",
    "pino": "^7.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-final-form": "^6.5.8",
    "react-router-dom": "^6.2.1",
    "split2": "^4.1.0",
    "ua-parser-js": "^1.0.2"
  },
  "devDependencies": {
    "@gravity-ui/eslint-config": "^1.0.2",
    "@gravity-ui/prettier-config": "^1.0.1",
    "@gravity-ui/stylelint-config": "^1.0.1",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@next/eslint-plugin-next": "^13.4.12",
    "@svgr/webpack": "^6.2.1",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.178",
    "@types/node": "^14.18.0",
    "@types/react": "17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/split2": "^3.2.1",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.26.0",
    "eslint-config-next": "12.0.10",
    "express": "^4.17.3",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.3",
    "next-purgecss": "^4.0.0",
    "next-remove-imports": "^1.0.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.5.1",
    "sanitize-html": "^2.7.0",
    "sass": "^1.64.1",
    "sass-loader": "^12.6.0",
    "stylelint": "^14.14.0",
    "svgo": "^2.8.0",
    "typescript": "^4.8.4",
    "typograf": "^6.14.0",
    "url-loader": "^4.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.svg": [
      "npm run svgo"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
